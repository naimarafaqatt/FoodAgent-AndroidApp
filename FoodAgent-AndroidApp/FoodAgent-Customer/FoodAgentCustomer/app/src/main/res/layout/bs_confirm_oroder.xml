<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:paddingLeft="@dimen/_20sdp"
        android:paddingTop="@dimen/_10sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name: "
        android:id="@+id/name"
        android:textColor="@color/blue"
        android:textSize="@dimen/_16sdp"
        tools:ignore="MissingConstraints" />

    <EditText
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:padding="@dimen/_10sdp"
        android:hint="user name"
        android:id="@+id/userNameEt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/confirm_order_bg"
        android:textSize="@dimen/_18sdp"
        app:layout_constraintTop_toBottomOf="@id/name"
        tools:ignore="MissingConstraints" />

    <TextView
        android:paddingLeft="@dimen/_20sdp"
        android:paddingTop="@dimen/_10sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shipping Address: "
        android:id="@+id/sa"
        android:textColor="@color/blue"
        android:textSize="@dimen/_16sdp"
        app:layout_constraintTop_toBottomOf="@id/userNameEt"
        tools:ignore="MissingConstraints" />

    <EditText
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:padding="@dimen/_10sdp"
        android:hint="shipping address"
        app:layout_constraintTop_toBottomOf="@id/sa"
        android:id="@+id/userAddressEt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/confirm_order_bg"
        android:textSize="@dimen/_18sdp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:paddingLeft="@dimen/_20sdp"
        android:paddingTop="@dimen/_10sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Price: "
        android:id="@+id/tp"
        android:textColor="@color/blue"
        android:textSize="@dimen/_16sdp"
        app:layout_constraintTop_toBottomOf="@id/userAddressEt"
        tools:ignore="MissingConstraints" />

    <TextView
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:padding="@dimen/_10sdp"
        android:hint="Total price"
        app:layout_constraintTop_toBottomOf="@id/tp"
        android:id="@+id/totalPriceEt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/confirm_order_bg"
        android:textSize="@dimen/_18sdp"
        tools:ignore="MissingConstraints" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="@dimen/_200sdp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/totalPriceEt"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/card_bg">

        <TextView
            android:layout_width="@dimen/_200sdp"
            android:layout_height="wrap_content"
            android:text="Done"
            android:textStyle="bold"
            android:id="@+id/btnDone"
            android:textAlignment="center"
            android:textSize="@dimen/_18sdp"
            android:textColor="@color/white"
            android:paddingBottom="@dimen/_5sdp"
            android:gravity="center_horizontal"
            tools:ignore="MissingConstraints" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>