<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/main_bg"
    android:layout_height="match_parent"
    tools:context=".activites.ProductDetailActivity">


    <RelativeLayout
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:id="@+id/toolbar"
        tools:ignore="MissingConstraints">


        <TextView
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Product Details"
            android:textColor="@color/white"
            android:textAppearance="?android:textAppearanceMedium"
            android:paddingTop="@dimen/_20sdp"
            android:gravity="center_vertical"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        android:padding="@dimen/_10sdp"
        android:id="@+id/c1"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="@dimen/_5sdp"
        app:cardElevation="@dimen/_3sdp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:background="@drawable/main_bg"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Product Name"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:textSize="@dimen/_16sdp"
                android:textColor="@color/white"
                android:id="@+id/productNameTv"
                tools:ignore="MissingConstraints" />

            <ImageView
                android:layout_width="@dimen/_200sdp"
                android:layout_height="@dimen/_150sdp"
                app:layout_constraintTop_toBottomOf="@id/productNameTv"
                app:layout_constraintLeft_toLeftOf="parent"
                android:src="@drawable/ic_cart"
                app:layout_constraintRight_toRightOf="parent"
                android:id="@+id/productImageIV"
                android:scaleType="fitXY"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/productImageIV"
                android:text="Description"
                android:paddingLeft="@dimen/_15sdp"
                android:textSize="@dimen/_12sdp"
                android:id="@+id/productDescriptionTv"
                android:textColor="@color/black"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/productDescriptionTv"
                android:textColor="@color/blue"
                android:text="Category"
                android:textSize="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:paddingLeft="@dimen/_15sdp"
                android:id="@+id/categoryTv"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/productDescriptionTv"
                android:text="RS: 100"
                android:textColor="@color/blue"
                android:paddingRight="@dimen/_20sdp"
                android:id="@+id/priceTv"
                android:textSize="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_5sdp"/>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/priceTv"
                android:paddingRight="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:textSize="@dimen/_12sdp"
                android:onClick="SelectSize"
                android:textColor="@color/black"
                android:text="Select Size"
                android:id="@+id/sizeTv"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/_15sdp"
                app:layout_constraintTop_toBottomOf="@id/categoryTv"
                android:text="Quantity"
                android:layout_marginTop="@dimen/_5sdp"
                android:textSize="@dimen/_12sdp"
                android:id="@+id/qunatityTv"
                android:textColor="@color/black"
                tools:ignore="MissingConstraints" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/_20sdp"
                android:text="Total Rs: 2000"
                android:id="@+id/totalPrice"
                app:layout_constraintTop_toBottomOf="@id/sizeTv"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="@dimen/_5sdp"
                android:textColor="@color/black"/>

            <ImageButton
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:src="@drawable/ic_minus"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:background="@drawable/btn_bg_1"
                android:id="@+id/btnDecrement"
                android:onClick="DecrementQuantity"
                app:layout_constraintTop_toBottomOf="@id/qunatityTv"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_25sdp"
                app:layout_constraintLeft_toRightOf="@id/btnDecrement"
                android:text="1"
                android:paddingLeft="@dimen/_5sdp"
                android:paddingRight="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                android:textSize="@dimen/_16sdp"
                android:id="@+id/quantityNumber"
                app:layout_constraintTop_toBottomOf="@id/qunatityTv"/>

            <ImageButton
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:src="@drawable/ic_plus"
                android:onClick="IncrementQuantity"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/btn_bg_1"
                android:id="@+id/btnIncrement"
                app:layout_constraintLeft_toRightOf="@id/quantityNumber"
                app:layout_constraintTop_toBottomOf="@id/qunatityTv"
                />


            <LinearLayout
                android:padding="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@color/black"
                app:layout_constraintTop_toBottomOf="@id/btnIncrement">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:layout_height="@dimen/_25sdp"
                    android:text="Delivery fee:100"
                    android:textSize="@dimen/_14sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:textColor="@color/white"
                    android:id="@+id/deliverfeetv"
                    android:background="@color/black"/>

                <ImageButton
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:src="@drawable/ic_cart"
                    android:layout_gravity="center"
                    android:onClick="AddToCart"
                    android:background="@color/black"
                    android:id="@+id/btnAddCart"/>


            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>
